<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddPrescriptionActivity" >

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/med_name_in"
        android:layout_below="@+id/med_name_in"
        android:layout_marginTop="26dp"
        android:text="@string/instructions"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/save_prescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instructions"
        android:layout_below="@+id/instruction_input"
        android:layout_marginTop="20dp"
        android:text="@string/save_prescription"
        android:onClick="addPrescription" />

    <TextView
        android:id="@+id/hcnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/med_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:text="@string/HCN"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/med_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/med_name_in"
        android:layout_below="@+id/hcnum"
        android:layout_marginTop="87dp"
        android:text="@string/med_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <requestFocus />

    <EditText
        android:id="@+id/hcn_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hcnum"
        android:layout_below="@+id/hcnum"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/med_name_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instruction_input"
        android:layout_below="@+id/med_name"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/instruction_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructions"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text" />

</RelativeLayout>
